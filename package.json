{
    "name": "yorlang-vs-code-extension",
    "displayName": "Yorlang-vs-code-extension",
    "description": "A code editor extension for the yorlang (yoruba language) programming language",
    "version": "0.0.1",
    "publisher": "Anoniscoding",
    "engines": {
        "vscode": "^1.28.0"
    },
    "categories": [
        "Programming Languages"
    ],
    "activationEvents": [
        "onCommand:extension.sayHello"
    ],
    "main": "./out/extension",
    "contributes": {
        "languages": [
            {
                "id": "yorlang",
                "configuration": "./language-configuration.json"
            }
        ],
        "grammars": [
            {
                "language": "yorlang",
                "path": "./syntaxes/yorlang.tmLanguage.json"
            }
        ],
        "commands": [
            {
                "command": "extension.sayHello",
                "title": "Hello World"
            }
        ]
    },
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./",
        "postinstall": "node ./node_modules/vscode/bin/install",
        "test": "npm run compile && node ./node_modules/vscode/bin/test"
    },
    "devDependencies": {
        "typescript": "^2.6.1",
        "vscode": "^1.1.21",
        "tslint": "^5.8.0",
        "@types/node": "^8.10.25",
        "@types/mocha": "^2.2.42"
    }
}
