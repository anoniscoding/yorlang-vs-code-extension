{
    "name": "yorlang-vs-code-extension",
    "displayName": "Yorlang-vs-code-extension",
    "description": "A code editor extension for the yorlang (yoruba language) programming language",
    "version": "0.0.1",
    "publisher": "Anoniscoding",
    "engines": {
        "vscode": "^1.28.0"
    },
    "categories": [
        "Programming Languages",
        "Snippets"
    ],
    "activationEvents": [
        "onCommand:extension.sayHello",
        "onLanguage:yorlang"
    ],
    "icon": "images/icon.png",
    "galleryBanner": {
        "color": "#C80000",
        "theme": "dark"
    },
    "main": "./out/extension",
    "contributes": {
        "languages": [
            {
                "id": "yorlang",
                "aliases": ["Yorlang", "Yorl"],
                "configuration": "./language-configuration.json",
                "extensions": [".yorl"]
            }
        ],
        "grammars": [
            {
                "language": "yorlang",
                "path": "./syntaxes/yorlang.tmLanguage.json",
                "scopeName": "source.yorlang"
            }
        ],
        "commands": [
            {
                "command": "extension.sayHello",
                "title": "Hello World"
            }
        ]
    },
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./",
        "postinstall": "node ./node_modules/vscode/bin/install",
        "test": "npm run compile && node ./node_modules/vscode/bin/test"
    },
    "devDependencies": {
        "typescript": "^2.6.1",
        "vscode": "^1.1.21",
        "tslint": "^5.8.0",
        "@types/node": "^8.10.25",
        "@types/mocha": "^2.2.42"
    },
    "homepage": "https://github.com/Microsoft/vscode-wordcount/blob/master/README.md",
    "bugs": {
        "url": "https://github.com/Microsoft/vscode-wordcount/issues",
        "email": "smcbreen@microsoft.com"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/Microsoft/vscode-wordcount.git"
    }
}
